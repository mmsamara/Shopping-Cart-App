        <div class="col-md-3 tabs">
            <h3 class="m_1">Related Products</h3>

            @{ 
                var db = new ApplicationDbContext();
                var mensFour = db.Items.Where(i => i.Gender == "M" && i.Name != Model.Name).Take(4).ToList();
                var womensFour = db.Items.Where(i => i.Gender == "W").Take(4).ToList();
                var sportsFour = db.Items.Where(i => i.Gender == "S").Take(4).ToList();
            }

            @if (Model.Gender == "M")
            {
                foreach (var watch in mensFour)
                {
                    <ul class="product">
                        <li class="product_img"><img src="@Url.Content(watch.MediaUrl)" class="img-responsive" alt="" /></li>
                        <li class="product_desc">
                            <h4><a href=@Url.Action("Details", "Items", new {id = watch.Id })>@watch.Name</a></h4>
                            <p class="single_price">$@watch.Price</p>
                            <a href=""@Url.Action("Create", "ShoppingCarts", new {ItemId = watch.Id })""d class="link-cart">Add to Cart</a>
                        </li>
                        <div class="clearfix"> </div>
                    </ul>
                }
            }
            else if (Model.Gender == "F")
            {
                foreach (var watch in womensFour)
                {
                    <ul class="product">
                        <li class="product_img"><img src="@Url.Content(watch.MediaUrl)" class="img-responsive" alt="" /></li>
                        <li class="product_desc">
